<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>MiniProject</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.htm</welcome-file>
	</welcome-file-list>


	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>BlogApp.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>BlogApp.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CreatePostServlet</servlet-name>
		<servlet-class>BlogApp.CreatePostServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreatePostServlet</servlet-name>
		<url-pattern>/createPost</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SearchPostsServlet</servlet-name>
		<servlet-class>BlogApp.SearchPostsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SearchPostsServlet</servlet-name>
		<url-pattern>/searchPosts</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AdminDashboardServlet</servlet-name>
		<servlet-class>BlogApp.AdminDashboardServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AdminDashboardServlet</servlet-name>
		<url-pattern>/adminDashboard</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ViewerDashboardServlet</servlet-name>
		<servlet-class>BlogApp.ViewerDashboardServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ViewerDashboardServlet</servlet-name>
		<url-pattern>/viewerDashboard</url-pattern>
	</servlet-mapping>

	 <servlet>
        <servlet-name>EditPostServlet</servlet-name>
        <servlet-class>BlogApp.EditPostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditPostServlet</servlet-name>
        <url-pattern>/editPost</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mapping for DeletePostServlet -->
    <servlet>
        <servlet-name>DeletePostServlet</servlet-name>
        <servlet-class>BlogApp.DeletePostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeletePostServlet</servlet-name>
        <url-pattern>/deletePost</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UpdatePostServlet</servlet-name>
        <servlet-class>BlogApp.UpdatePostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdatePostServlet</servlet-name>
        <url-pattern>/updatePost</url-pattern>
    </servlet-mapping>
    

</web-app>